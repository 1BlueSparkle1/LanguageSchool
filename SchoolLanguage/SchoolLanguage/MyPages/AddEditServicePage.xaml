<Page x:Class="SchoolLanguage.MyPages.AddEditServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolLanguage.MyPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditServicePage">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="20">
                    <TextBlock HorizontalAlignment="Center">Идентификатор</TextBlock>
                    <TextBox Text="{Binding ID}" IsEnabled="False" x:Name="IdTb"></TextBox>
                    <Button x:Name="EditImageBtn" Click="EditImageBtn_Click">Изменить изображение</Button>
                    <Image Source="{Binding MainImage}" Height="150" Name="MainImage"></Image>
                </StackPanel>
                <StackPanel Margin="20">
                    <TextBlock HorizontalAlignment="Center">Введите название</TextBlock>
                    <TextBox Height="60" TextWrapping="Wrap" Text="{Binding Title}" x:Name="TitleTb"></TextBox>
                    <TextBlock HorizontalAlignment="Center">Введите Стоимость</TextBlock>
                    <TextBox Text="{Binding Cost}" x:Name="CostTb"></TextBox>
                    <TextBlock HorizontalAlignment="Center">Введите размер скидки</TextBlock>
                    <TextBox Text="{Binding Discount}" x:Name="DiscountTb"></TextBox>
                </StackPanel>
                <StackPanel Margin="20">
                    <TextBlock HorizontalAlignment="Center">Длительность сек.</TextBlock>
                    <TextBox Text="{Binding DurationInSeconds}" x:Name="DurationInSecondsTb"></TextBox>
                    <TextBlock HorizontalAlignment="Center">Введите описание</TextBlock>
                    <TextBox Text="{Binding Description}" Height="150" x:Name="a"></TextBox>
                </StackPanel>
            </StackPanel>
            <Button x:Name="SaveBtn" Click="SaveBtn_Click">Сохранить</Button>
        </StackPanel>
        
    </Grid>
</Page>
